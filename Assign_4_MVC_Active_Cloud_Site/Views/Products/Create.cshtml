@model Assign_4_MVC_Active_Cloud_Site.Models.Products

@{
    ViewData["Title"] = "Add Items";
}

<h4>Add Products</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name_brand" class="control-label"></label>
                <input asp-for="name_brand" class="form-control" />
