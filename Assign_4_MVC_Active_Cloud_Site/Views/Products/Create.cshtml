            </div>
            <div class="form-group">
                <label asp-for="industry_code" class="control-label"></label>
                <input asp-for="industry_code" class="form-control" />
                <span asp-validation-for="industry_code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
